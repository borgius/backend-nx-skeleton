{
  "name": "@webundsoehne/nestjs-graphql-typeorm-dataloader",
  "description": "A library to utilize the graphql-dataloader with nestjs and typeorm.",
  "version": "1.0.0",
  "author": "Backend <backend@webundsoehne.com>",
  "license": "ISC",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "https://gitlab.tailored-apps.com/ckilic/nx-test",
  "publishConfig": {
    "access": "public"
  },
  "keywords": ["nestjs", "graphql", "typeorm", "dataloader", "data-loader"],
  "scripts": {
    "prebuild": "rimraf tsconfig*.tsbuildinfo && rimraf dist/",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "tsconfig-replace-paths --project tsconfig.json",
    "dev:build": "yarn prebuild && tsc -p tsconfig.json && yarn postbuild",
    "dev:start": "yarn dev:build && tsc-watch --noClear --onSuccess \"yarn postbuild\"",
    "lint": "prettier --loglevel warn --write src/ && eslint --ext .ts,.js,.tsx,.jsx --fix src/",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx src/",
    "lint:staged": "lint-staged",
    "docs:jsdoc": "typedoc src/index.ts --readme none",
    "docs:toc": "markdown-toc README.md --bullets='-' -i"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "./**/*.{ts,js,tsx,jsx}": ["prettier --loglevel warn --write", "eslint --fix"],
    "./**/*.{json,md}": ["prettier --loglevel warn --write"]
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "apollo-server-plugin-base": "^3.5.1",
    "dataloader": "^2.0.0",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@apollo/gateway": "^0.46.0",
    "@nestjs/graphql": "^9.1.2",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.12",
    "@types/uuid": "^8.3.4",
    "apollo-server-fastify": "^3.6.2",
    "class-validator": "^0.13.2",
    "graphql": "^15",
    "graphql-request": "^3.7.0",
    "mikro-orm": "^4.5.10",
    "rimraf": "^3.0.2",
    "sqlite3": "^5.0.2",
    "typeorm": "^0.2.41"
  }
}
