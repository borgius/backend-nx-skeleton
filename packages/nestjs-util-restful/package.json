{
  "name": "@webundsoehne/nestjs-util-restful",
  "version": "1.0.0",
  "description": "NestJS skeleton util library for restful applications.",
  "author": "Backend <backend@webundsoehne.com>",
  "license": "ISC",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "rimraf tsconfig*.tsbuildinfo && rimraf dist/",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "tsconfig-replace-paths --project tsconfig.json",
    "dev:build": "yarn prebuild && tsc -p tsconfig.json && yarn postbuild",
    "dev:start": "yarn dev:build && tsc-watch --noClear --onSuccess \"yarn postbuild\"",
    "lint": "prettier --loglevel warn --write src/ && eslint --ext .ts,.js,.tsx,.jsx --fix src/",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx src/",
    "lint:staged": "lint-staged",
    "docs:toc": "markdown-toc README.md --bullets='-' -i",
    "docs:jsdoc": "typedoc src/index.ts src/microservices.ts src/graphql.ts --readme none"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "prettier --loglevel warn --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --loglevel warn --write"
    ]
  },
  "keywords": [
    "nestjs",
    "util"
  ],
  "peerDependencies": {
    "@nestjs/common": ">= 8 < 10",
    "@nestjs/core": ">= 8 < 10",
    "@nestjs/swagger": ">= 5 < 6",
    "fastify": ">= 3",
    "fastify-swagger": ">= 4 < 5",
    "express": ">= 4 < 5",
    "swagger-ui-express": ">= 4 < 5"
  },
  "peerDependenciesMeta": {
    "fastify": {
      "optional": true
    },
    "fastify-swagger": {
      "optional": true
    },
    "swagger-ui-express": {
      "optional": true
    },
    "express": {
      "optional": true
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@nestjs/common": "^8.2.6",
    "@nestjs/core": "^8.2.6",
    "@nestjs/swagger": "^5.2.0",
    "@types/config": "^0.0.41",
    "@types/node": "^17.0.13",
    "fastify": "^3.27.0",
    "fastify-swagger": "^4.13.1",
    "express": "^4.17.2",
    "@types/express": "^4.17.3",
    "swagger-ui-express": "^4.1.5"
  },
  "engines": {
    "node": ">=10"
  }
}
