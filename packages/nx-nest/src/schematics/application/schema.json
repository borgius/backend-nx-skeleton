{
  "$schema": "http://json-schema.org/schema",
  "id": "NxNestSkeleton",
  "title": "Create a Nest application from skeleton with NX",
  "examples": [{
    "command": "g app myapp --bgtask",
    "description": "Initiate background task scheduler."
  }],
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the application.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the application?"
    },
    "components": {
      "description": "Components to be embeded.",
      "type": "string",
      "alias": "c"
    },
    "server": {
      "description": "If server component is selected, specifies the type.",
      "type": "string",
      "alias": "s"
    },
    "database": {
      "description": "Database that is desired to be used.",
      "type": "string",
      "alias": "db"
    },
    "linter": {
      "description": "The tool to use for running lint checks.",
      "type": "string",
      "enum": ["eslint"],
      "default": "eslint"
    },
    "tests": {
      "description": "Test runner to use for unit and e2e tests",
      "type": "string",
      "enum": ["jest", "none"],
      "default": "jest"
    },
    "verbose": {
      "description": "Set this to debug mode.",
      "type": "boolean"
    }
  },
  "required": []
}