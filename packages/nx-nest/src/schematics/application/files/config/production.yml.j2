{% if dbAdapters is defined and enum.extensions.EXTERNAL_BACKEND_DATABASE in extensions and dbAdapters == enum.dbAdapters.TYPEORM %}
{% if dbAdapters == enum.dbAdapters.TYPEORM %}
database:
  directory:
    entity: ./libs/{{ constants.BACKEND_DATABASE_PACKAGE }}/src/entity-typeorm/**/*.entity{.ts,.js}
    migration: ../../libs/{{ constants.BACKEND_DATABASE_PACKAGE }}/src/migration-typeorm
    seed: seeds
{% elif dbAdapters == enum.dbAdapters.MONGOOSE %}
database:
  migration:
    migrationsDir: ./libs/{{ constants.BACKEND_DATABASE_PACKAGE }}/src/migration-mongoose
{% endif %}
{% endif %}
