logLevel: LOG_LEVEL

misc:
  lockfile: MAINTENANCE_LOCKFILE
  lastUpdateFile: LAST_UPDATE_FILE
  maintenanceNotification: MAINTENANCE_MESSAGE

url:
  basePath: BASE_URL
  apiPath: API_BASE_PATH

swagger:
  useHttps:
    __name: USE_HTTPS
    __format: json
  basePath: API_BASE_PATH

{% if database is defined and database != enum.database.NONE %}
database:
  host: DATABASE_HOST
  port: DATABASE_PORT
  database: DATABASE_NAME
  {% if enum.dbAdapters.TYPEORM in database -%}
  type: DATABASE_TYPE
  username: DATABASE_USER
  password: DATABASE_PASSWORD
  migrationsTableName: DATABASE_MIGRATIONS_TABLE
  {% elif enum.dbAdapters.MONGOOSE in database -%}
  authentication:
    username: DATABASE_USER
    password: DATABASE_PASSWORD
  {% endif -%}
{% endif %}
