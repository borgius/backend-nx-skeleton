{% if server is defined %}
port: API_PORT
{% endif %}
logLevel: LOG_LEVEL

misc:
  lockfile: MAINTENANCE_LOCKFILE
  lastUpdateFile: LAST_UPDATE_FILE
  maintenanceNotification: MAINTENANCE_MESSAGE

{% if server is defined %}
url:
  basePath: BASE_URL
  apiPath: API_BASE_PATH

swagger:
  useHttps:
    __name: USE_HTTPS
    __format: json
  basePath: API_BASE_PATH
{% endif %}

{% if database is defined and database != enum.database.NONE %}
database:
  host: DATABASE_HOST
  port: DATABASE_PORT
  database: DATABASE_NAME
{% if enum.dbAdapters.TYPEORM == dbAdapters %}
  type: DATABASE_TYPE
  username: DATABASE_USER
  password: DATABASE_PASSWORD
  migrationsTableName: DATABASE_MIGRATIONS_TABLE
{% elif enum.dbAdapters.MONGOOSE == dbAdapters %}
  authentication:
    username: DATABASE_USER
    password: DATABASE_PASSWORD
{% endif %}
{% endif %}

{% if microservice is defined or enum.components.MICROSERVICE_CLIENT in components %}
messageQueue:
  urls:
    __name: MESSAGE_QUEUE_URLS
    __format: json
{% endif %}

