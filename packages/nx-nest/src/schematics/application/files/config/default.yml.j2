port: 3000
logLevel: debug

misc:
  lockfile: maintenance.lock
  maintenanceNotification: null
  lastUpdateFile: .last-update
  changelogFile: CHANGELOG.md

url:
  basePath: http://localhost:3000
  apiPath: ""

swagger:
  path: /internal/docs
  title: NestJS Skeleton
  description: API
  useHttps: false

cacheLifetime:
  defaultExpiresHeader: false
  defaultLifetime: 0
  expiresHeader: Expires
  cacheControlHeader: Cache-control

{% if 'typeorm' in database %}
database:
  {% if database == 'typeorm-mysql' -%}
  type: mysql
  port: 3306
  {% endif -%}
  {% if database == 'typeorm-postgresql' -%}
  type: postgres
  port: 5432
  {% endif -%}
  host: db
  username: user
  password: secret
  database: db
  synchronize: false
  cache: false
  keepConnectionAlive: true
  mock:
    host: db-mock
    database: db
  directories:
    entity: ./**/*.entity{.ts,.js}
    migration: migrations
    seed: seeds
{% endif %}