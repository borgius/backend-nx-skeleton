port: 3000
logLevel: debug

misc:
  lockfile: maintenance.lock
  maintenanceNotification: null
  lastUpdateFile: .last-update
  changelogFile: CHANGELOG.md

url:
  basePath: http://localhost:3000
  apiPath: ""

swagger:
  path: /internal/docs
  title: NestJS Skeleton
  description: API
  useHttps: false

cacheLifetime:
  defaultExpiresHeader: false
  defaultLifetime: 0
  expiresHeader: Expires
  cacheControlHeader: Cache-control

{% if database is defined and database != 'none' %}
database:
  host: db
  database: db
  {% if 'typeorm' in database -%}
  {% if database == 'typeorm-mysql' -%}
  type: mysql
  port: 3306
  {% elif database == 'typeorm-postgresql' -%}
  type: postgres
  port: 5432
  {% endif -%}
  username: user
  password: secret
  synchronize: false
  cache: false
  keepConnectionAlive: true
  mock:
    host: db-mock
    database: db
  directories:
    entity: ./**/*.entity{.ts,.js}
    migration: migrations
    seed: seeds
  {% elif 'mongoose-mongodb' == database -%}
  authentication:
    username: user
    password: secret
  mockOptions:
    host: db-mock
  connectOptions:
    ignoreUndefined: true
    useNewUrlParser: true
    useUnifiedTopology: true
  {% endif -%}
{% endif %}
