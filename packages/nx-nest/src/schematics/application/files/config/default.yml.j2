port: 3000
logLevel: debug

misc:
  lockfile: maintenance.lock
  maintenanceNotification: null
  lastUpdateFile: .last-update
  changelogFile: CHANGELOG.md

url:
  basePath: http://localhost:3000
  apiPath: ""

swagger:
  path: /internal/docs
  title: NestJS Skeleton
  description: API
  useHttps: false

cacheLifetime:
  defaultExpiresHeader: false
  defaultLifetime: 0
  expiresHeader: Expires
  cacheControlHeader: Cache-control

{% if database is defined and database != enum.database.NONE %}
database:
  database: db
  {% if 'typeorm' in database -%}
  {% if  database == enum.database.TYPEORM_MYSQL -%}
  host: db-mysql
  type: mysql
  port: 3306
  {% elif database == enum.database.TYPEORM_POSTGRESQL -%}
  host: db-postgres
  type: postgres
  port: 5432
  {% endif -%}
  username: user
  password: secret
  synchronize: false
  cache: false
  keepConnectionAlive: true
  mock:
    database: db
  directories:
    entity: ./**/*.entity{.ts,.js}
    migration: migrations
    seed: seeds
  {% elif 'mongoose' == database -%}
  host: db-mongodb
  username: user
  password: secret
  mock:
    database: db-mock
  ignoreUndefined: true
  useNewUrlParser: true
  useUnifiedTopology: true
  {% endif -%}
{% endif %}
