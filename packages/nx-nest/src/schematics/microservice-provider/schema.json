{
  "$schema": "http://json-schema.org/schema",
  "$id": "NxNestSkeleton",
  "title": "Create a Nest application from skeleton with NX",
  "type": "object",
  "properties": {
    "linter": {
      "description": "The tool to use for running lint checks.",
      "type": "string",
      "enum": ["eslint"],
      "default": "eslint"
    },

    "skipFormat": {
      "description": "Skip formatting after the initiation.",
      "type": "boolean"
    },

    "silent": {
      "description": "Run in silent mode.",
      "type": "boolean"
    },

    "force": {
      "description": "Do not prompt for overwrites.",
      "type": "boolean"
    },

    "verbose": {
      "description": "Set this to debug mode.",
      "type": "boolean"
    }
  },
  "required": []
}
