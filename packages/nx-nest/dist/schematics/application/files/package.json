{
  "name": "application_name",
  "version": "0.0.1",
  "description": "Tailored NestJS application skeleton",
  "author": "Backend <backend@webundsoehne.com>",
  "license": "ISC",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/src/main.js",
    "command": "CLI_PATH=./dist/src/main.js NODE_SERVICE=cli npx nestjs-command $command",
    "dev:start": "NODE_SERVICE=${NODE_SERVICE:-'server'} eval ${PACKAGE_START_OVERRIDE:-\"ts-node-dev --no-notify --inspect=0.0.0.0:${DEBUG_PORT:-'9229'} -r tsconfig-paths/register src/main.ts\"}",
    "dev:command": "CLI_PATH=./src/main.ts NODE_SERVICE=cli npx nestjs-command $command",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "lint-staged",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:start": "docker-compose up -d --force-recreate",
    "connect:api": "docker-compose exec api bash"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier"
    }
  },
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.tailored-apps.com:backend/nestjs-api-skeleton.git"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.13",
    "@nestjs/core": "^7.0.13",
    "@nestjs/platform-fastify": "^7.0.13",
    "@nestjs/swagger": "^4.5.7",
    "@nestjsx/crud": "^4.6.2",
    "@webundsoehne/nestjs-util": "^1.0.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "cors": "^2.8.5",
    "fastify-swagger": "^2.5.1",
    "fs-extra": "^9.0.0",
    "helmet": "^3.22.0",
    "moment": "^2.25.3",
    "nest-schedule": "^0.6.3",
    "nestjs-command": "^1.3.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.0.13",
    "@types/express": "^4.17.6",
    "@types/fs-extra": "^9.0.0",
    "@types/jest": "^25.2.2",
    "@types/node": "^14.0.1",
    "@types/supertest": "^2.0.9",
    "@types/winston": "^2.4.4",
    "@types/yargs": "^15.0.5",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.2",
    "npx": "^10.2.0",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.10.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.2",
    "typescript": "^3.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": "\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "npm run lint:fix"
    ]
  }
}