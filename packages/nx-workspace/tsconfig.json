{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "src",
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
    "paths": {
      "@utils/*": ["utils/*"],
      "@interfaces/*": ["interfaces/*"],
      "@constants/*": ["constants/*"],
      "@integration/*": ["integration/*"],
      "@schematics/*": ["schematics/*"],
      "@utils": ["utils"],
      "@interfaces": ["interfaces"],
      "@constants": ["constants"],
      "@integration": ["integration"],
      "@schematics": ["schematics"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/files", "**/templates"]
}
