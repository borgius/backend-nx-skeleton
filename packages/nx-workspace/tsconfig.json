{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@src/*": ["*"],
      "@utils/*": ["utils/*"],
      "@interfaces/*": ["interfaces/*"],
      "@constants/*": ["constants/*"],
      "@integration/*": ["integration/*"],
      "@schematics/*": ["schematics/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/files", "**/templates"]
}
