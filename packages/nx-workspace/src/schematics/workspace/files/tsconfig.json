{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2021",
    "lib": ["ES2021", "ESNext", "DOM"],
    "sourceMap": false,
    "declaration": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "noUnusedLocals": false,
    "incremental": false,
    "rootDir": ".",
    "baseUrl": "."
  },
  "exclude": ["node_modules", "tmp"]
}
