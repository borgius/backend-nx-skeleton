{
  "name": "@webundsoehne/nx-builders",
  "version": "1.0.0",
  "description": "TSC compiler for NX.",
  "repository": "https://gitlab.tailored-apps.com/ckilic/nx-test",
  "author": "Backend <backend@webundsoehne.com>",
  "license": "ISC",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "schematics": "./schematics.json",
  "builders": "./builders.json",
  "scripts": {
    "prebuild": "rimraf tsconfig*.tsbuildinfo && rimraf dist/",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "tscpaths -p tsconfig.paths.json -s ./dist -o ./dist && cpy --cwd=src --parents '**/*.json' ../dist/",
    "dev:build": "yarn prebuild && tsc -p tsconfig.json && tscpaths -p tsconfig.paths.json -s ./dist -o ./dist",
    "dev:start": "yarn dev:build && TS_NODE_PROJECT='tsconfig.paths.json' tsc-watch --noClear --onSuccess \"yarn postbuild\"",
    "lint": "prettier --write src/ && eslint --ext .ts,.js,.tsx,.jsx --fix src/",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx src/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "./*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "./*.{json,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "@nrwl/workspace": "*",
    "ts-node": ">= 8.10.0",
    "ts-node-dev": ">= 1.0.0",
    "tsc-watch": ">= 4.2.0",
    "tscpaths": ">= 0.0.9",
    "typescript": ">= 3.9.0"
  },
  "dependencies": {
    "@angular-devkit/architect": "^0.1001.2",
    "@angular-devkit/core": "^10.1.2",
    "@angular-devkit/schematics": "~10.1.2",
    "@nrwl/cli": "^10.2.0",
    "@webundsoehne/nx-tools": "*",
    "execa": "^4.0.2",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@types/execa": "^2.0.0",
    "@types/tsc-watch": "^4.2.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.3.1",
    "lint-staged": "^10.2.11",
    "rimraf": "^3.0.2",
    "tsc-watch": "^4.2.9",
    "tscpaths": "^0.0.9",
    "typescript": "^3.9.7"
  }
}
