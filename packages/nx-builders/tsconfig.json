{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "src",
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
    "paths": {
      "@builders/*": ["builders/*"],
      "@interfaces/*": ["interfaces/*"],
      "@schematics/*": ["schematics/*"],
      "@utils/*": ["utils/*"],
      "@builders": ["builders"],
      "@interfaces": ["interfaces"],
      "@schematics": ["schematics"],
      "@utils": ["utils"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/files", "**/templates"]
}
