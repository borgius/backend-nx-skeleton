{
  "source": {
    "includePattern": ".+\\.ts(|x)?$",
    "excludePattern": "(schematics/|files/).+?\\.ts(|x)?$"
  },
  "plugins": ["plugins/markdown", "../../node_modules/jsdoc-babel"],
  "babel": {
    "extensions": ["ts", "tsx"],
    "ignore": ["**/*.(test|spec).ts", "**/files/", "**/assets/"],
    "babelrc": false,
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": true
          }
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": ["@babel/proposal-class-properties", "@babel/proposal-object-rest-spread"]
  }
}
