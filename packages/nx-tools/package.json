{
  "name": "@webundsoehne/nx-tools",
  "version": "2.0.1",
  "description": "Common tools for NX.",
  "repository": "https://gitlab.tailored-apps.com/ckilic/nx-test",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Backend <backend@webundsoehne.com>",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "schematics": "./schematics.json",
  "scripts": {
    "prebuild": "rimraf tsconfig*.tsbuildinfo && rimraf dist/",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "tsconfig-replace-paths --project tsconfig.json && cpy --cwd=src --parents --dot '**/*.json' ../dist/ && rimraf dist/**/files/ dist/**/assets/ && cpy --cwd=src --parents --dot '**/files/**' '**/assets/**' ../dist/",
    "dev:build": "yarn prebuild && tsc -p tsconfig.json && yarn postbuild",
    "dev:start": "yarn dev:build && tsc-watch --noClear --onSuccess \"yarn postbuild\"",
    "lint": "prettier --loglevel warn --write src/ && eslint --ext .ts,.js,.tsx,.jsx --fix src/",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx src/",
    "lint:staged": "lint-staged",
    "docs:jsdoc": "typedoc src/index.ts --readme none",
    "docs:toc": "markdown-toc README.md --bullets='-' -i"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "./**/*.{ts,js,tsx,jsx}": ["prettier --loglevel warn --write", "eslint --fix"],
    "./**/*.{json,md}": ["prettier --loglevel warn --write"]
  },
  "peerDependencies": {
    "@nrwl/workspace": "*"
  },
  "dependencies": {
    "@angular-devkit/architect": "0.1202.5",
    "@angular-devkit/core": "12.2.5",
    "@angular-devkit/schematics": "12.2.5",
    "@nrwl/cli": "^13.2.1",
    "@nrwl/devkit": "^13.2.1",
    "@types/micromatch": "^4.0.2",
    "@types/picomatch": "^2.3.0",
    "change-case": "^4.1.2",
    "colorette": "^2.0.16",
    "deepmerge": "^4.2.2",
    "diff": "^5.0.0",
    "eslint": "^8.3.0",
    "execa": "^5.1.1",
    "figures": "^3.0.0",
    "find-up": "^5.0.0",
    "glob": "^7.2.0",
    "listr2": "^3.13.4",
    "micromatch": "^4.0.4",
    "nunjucks": "^3.2.3",
    "picomatch": "^2.3.0",
    "pidtree": "^0.5.0",
    "prettier": "^2.4.1",
    "through": "^2.3.8"
  },
  "devDependencies": {
    "@types/deepmerge": "^2.2.0",
    "@types/diff": "^5.0.1",
    "@types/eslint": "^8.2.0",
    "@types/figures": "^3.0.1",
    "@types/nunjucks": "^3.1.5",
    "@types/prettier": "^2.4.2"
  }
}
