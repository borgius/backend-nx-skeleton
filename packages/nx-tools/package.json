{
  "name": "@webundsoehne/nx-tools",
  "version": "1.0.0",
  "repository": "https://github.com/tailoredmedia/backend-nx-skeleton",
  "description": "Common tools for NX.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "Backend <backend@webundsoehne.com>",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "schematics": "./schematics.json",
  "scripts": {
    "build": "tsup-node",
    "postbuild": "cpy --cwd=src --parents --dot '**/*.json' ../dist/ && rimraf dist/**/files/ dist/**/assets/ && cpy --cwd=src --parents --dot '**/files/**' '**/assets/**' ../dist/",
    "dev:start": "tsup-node --silent --watch",
    "lint": "prettier --loglevel warn --write src/ && eslint --ext .ts,.js,.tsx,.jsx --fix src/",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx src/",
    "lint:staged": "lint-staged",
    "docs:jsdoc": "typedoc src/index.ts --readme none",
    "docs:toc": "markdown-toc README.md --bullets='-' -i"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "prettier --loglevel warn --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --loglevel warn --write"
    ]
  },
  "peerDependencies": {
    "rxjs": ">= 7 < 8"
  },
  "dependencies": {
    "@angular-devkit/architect": "^0.1400.0",
    "@angular-devkit/core": "^14.0.0",
    "@angular-devkit/schematics": "^14.0.0",
    "@nrwl/cli": "^14.1.9",
    "@nrwl/devkit": "^14.1.9",
    "@nrwl/nx": "^7.8.7",
    "@nrwl/tao": "^14.1.9",
    "@nrwl/workspace": "^14.1.9",
    "@types/micromatch": "^4.0.2",
    "@types/picomatch": "^2.3.0",
    "@webundsoehne/deep-merge": "*",
    "change-case": "^4.1.2",
    "colorette": "^2.0.17",
    "diff": "^5.1.0",
    "eslint": "^8.17.0",
    "execa": "^5.1.1",
    "figures": "^3.0.0",
    "find-up": "^5.0.0",
    "fs-extra": "^10.1.0",
    "globby": "^11.0.3",
    "listr2": "^4.0.4",
    "micromatch": "^4.0.4",
    "nunjucks": "^3.2.3",
    "pidtree": "^0.6.0",
    "prettier": "^2.5.1",
    "rewire": "^6.0.0",
    "through": "^2.3.8",
    "update-notifier": "^5.1.0",
    "update-notifier2": "^1.0.6",
    "which": "^2.0.2",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@types/deepmerge": "^2.2.0",
    "@types/diff": "^5.0.2",
    "@types/eslint": "^8.4.2",
    "@types/figures": "^3.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/nunjucks": "^3.2.1",
    "@types/prettier": "^2.6.3",
    "@types/rewire": "^2.5.28",
    "@types/which": "^2.0.1",
    "@types/winston": "^2.4.4"
  },
  "engines": {
    "node": ">= 16"
  }
}
