{
  "name": "@webundsoehne/nx-tools",
  "version": "2.0.1",
  "description": "Common tools for NX.",
  "repository": "https://gitlab.tailored-apps.com/ckilic/nx-test",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Backend <backend@webundsoehne.com>",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "schematics": "./schematics.json",
  "scripts": {
    "prebuild": "rimraf tsconfig*.tsbuildinfo && rimraf dist/",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "tscpaths -p tsconfig.paths.json -s ./dist -o ./dist && cpy --cwd=src --parents --dot '**/*.json' ../dist/ && rimraf dist/**/files/ dist/**/assets/ && cpy --cwd=src --parents --dot '**/files/**' '**/assets/**' ../dist/",
    "dev:build": "yarn prebuild && tsc -p tsconfig.json && yarn postbuild",
    "dev:start": "yarn dev:build && tsc-watch --noClear --onSuccess \"yarn postbuild\"",
    "lint": "prettier --loglevel warn --write src/ && eslint --ext .ts,.js,.tsx,.jsx --fix src/",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx src/",
    "lint:staged": "lint-staged",
    "docs:jsdoc": "jsdoc2md --files './src/**' --configure './jsdoc2md.json' > ./API.md",
    "docs:toc": "markdown-toc README.md --bullets='-' -i"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "./**/*.{ts,js,tsx,jsx}": [
      "prettier --loglevel warn --write",
      "eslint --fix"
    ],
    "./**/*.{json,md}": [
      "prettier --loglevel warn --write"
    ]
  },
  "peerDependencies": {
    "@nrwl/workspace": "*"
  },
  "dependencies": {
    "@angular-devkit/architect": "^0.1200.5",
    "@angular-devkit/core": "^12.0.5",
    "@angular-devkit/schematics": "^12.0.5",
    "@nrwl/cli": "^12.3.5",
    "@nrwl/devkit": "^12.3.5",
    "@types/micromatch": "^4.0.1",
    "@types/picomatch": "^2.2.4",
    "change-case": "^4.1.1",
    "deepmerge": "^4.2.2",
    "diff": "^5.0.0",
    "eslint": "^7.27.0",
    "execa": "^5.0.1",
    "figures": "^3.2.0",
    "glob": "^7.1.7",
    "listr2": "^3.9.0",
    "micromatch": "^4.0.4",
    "nunjucks": "^3.2.3",
    "picomatch": "^2.3.0",
    "pidtree": "^0.5.0",
    "prettier": "^2.3.0",
    "through": "^2.3.8"
  },
  "devDependencies": {
    "@types/deepmerge": "^2.2.0",
    "@types/diff": "^5.0.0",
    "@types/eslint": "^7.2.12",
    "@types/figures": "^3.0.1",
    "@types/nunjucks": "^3.1.4",
    "@types/prettier": "^2.2.3"
  }
}
