{
  "name": "@webundsoehne/nx-tools",
  "version": "1.0.0",
  "description": "Common tools for NX.",
  "repository": "https://gitlab.tailored-apps.com/ckilic/nx-test",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Backend <backend@webundsoehne.com>",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "schematics": "./schematics.json",
  "scripts": {
    "prebuild": "rimraf tsconfig*.tsbuildinfo && rimraf dist/",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "tscpaths -p tsconfig.paths.json -s ./dist -o ./dist && cpy --cwd=src --parents '**/*.json' ../dist/ && rimraf dist/**/files/ && cpy --cwd=src --parents '**/files/**' ../dist/",
    "dev:build": "yarn prebuild && tsc -p tsconfig.json && yarn postbuild",
    "dev:start": "yarn dev:build && tsc-watch --noClear --onSuccess \"yarn postbuild\"",
    "lint": "prettier --loglevel warn --write src/ && eslint --ext .ts,.js,.tsx,.jsx --fix src/",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx src/",
    "lint:staged": "lint-staged && yarn docs:jsdoc",
    "docs:jsdoc": "jsdoc2md --files './src/**' --configure './jsdoc2md.json' > ./API.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "./**/*.{ts,js,tsx,jsx}": ["prettier --loglevel warn --write", "eslint --fix"],
    "./**/*.{json,md}": ["prettier --loglevel warn --write"]
  },
  "peerDependencies": {
    "@nrwl/workspace": "*"
  },
  "dependencies": {
    "@angular-devkit/architect": "^0.1001.2",
    "@angular-devkit/core": "^10.1.2",
    "@angular-devkit/schematics": "~10.1.2",
    "@nrwl/cli": "^10.2.0",
    "@types/micromatch": "^4.0.1",
    "@types/picomatch": "^2.2.1",
    "deepmerge": "^4.2.2",
    "diff": "^4.0.2",
    "eslint": "^7.9.0",
    "execa": "^4.0.2",
    "figures": "^3.2.0",
    "listr2": "^3.1.1",
    "micromatch": "^4.0.2",
    "nunjucks": "^3.2.1",
    "picomatch": "^2.2.2",
    "pidtree": "^0.5.0",
    "prettier": "^2.1.2",
    "through": "^2.3.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "jsdoc-babel": "^0.5.0",
    "jsdoc-to-markdown": "^6.0.1",
    "@types/diff": "^4.0.2",
    "@types/eslint": "^7.2.0",
    "@types/figures": "^3.0.1",
    "@types/nunjucks": "^3.1.3",
    "@types/prettier": "^2.0.1",
    "cpy-cli": "^3.1.1",
    "lint-staged": "^10.2.11",
    "rimraf": "^3.0.2",
    "tsc-watch": "^4.2.8",
    "tscpaths": "^0.0.9",
    "typescript": "^4.0.3"
  }
}
