{
  "name": "@webundsoehne/nx-tools",
  "version": "1.0.0",
  "description": "Common tools for NX.",
  "repository": "https://gitlab.tailored-apps.com/ckilic/nx-test",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Backend <backend@webundsoehne.com>",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "rimraf tsconfig*.tsbuildinfo && rimraf dist/",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "tscpaths -p tsconfig.paths.json -s ./dist -o ./dist",
    "dev:build": "yarn prebuild && tsc -p tsconfig.json && yarn postbuild",
    "dev:start": "yarn dev:build && TS_NODE_PROJECT='tsconfig.paths.json' tsc-watch --noClear --onSuccess \"yarn postbuild\"",
    "lint": "prettier --write src/ && eslint --ext .ts,.js,.tsx,.jsx --fix src/",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx src/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "./*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "./*.{json,md}": [
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "@nrwl/workspace": "*"
  },
  "dependencies": {
    "@angular-devkit/architect": "^0.1001.2",
    "@angular-devkit/core": "^10.1.2",
    "@angular-devkit/schematics": "~10.1.2",
    "@nrwl/cli": "^10.2.0",
    "deepmerge": "^4.2.2",
    "diff": "^4.0.2",
    "eslint": "^7.9.0",
    "execa": "^4.0.2",
    "figures": "^3.2.0",
    "listr2": "^3.0.1",
    "nunjucks": "^3.2.1",
    "pidtree": "^0.5.0",
    "prettier": "^2.1.2",
    "through": "^2.3.8"
  },
  "devDependencies": {
    "@types/diff": "^4.0.2",
    "@types/eslint": "^7.2.0",
    "@types/figures": "^3.0.1",
    "@types/nunjucks": "^3.1.3",
    "@types/prettier": "^2.0.1",
    "lint-staged": "^10.2.11",
    "rimraf": "^3.0.2",
    "tsc-watch": "^4.2.8",
    "tscpaths": "^0.0.9",
    "typescript": "^3.9.5"
  }
}
