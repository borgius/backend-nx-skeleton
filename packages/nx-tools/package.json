{
  "name": "@webundsoehne/nx-tools",
  "version": "0.0.1",
  "description": "Common tools for NX.",
  "repository": "<<---REPOSITORYHERE--->>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Cenk Kilic",
  "license": "MIT",
  "schematics": "./collection.json",
  "builders": "./builders.json",
  "scripts": {
    "prebuild": "rimraf tsconfig*.tsbuildinfo && rimraf dist/",
    "build": "tsc -p tsconfig.build.json && tscpaths -p tsconfig.paths.json -s ./dist -o ./dist",
    "dev:build": "yarn prebuild && tsc -p tsconfig.json && tscpaths -p tsconfig.paths.json -s ./dist -o ./dist",
    "dev:start": "yarn dev:build && TS_NODE_PROJECT='tsconfig.paths.json' tsc-watch --noClear --onSuccess \"yarn dev:start:onSuccess\"",
    "dev:start:onSuccess": "tscpaths -p tsconfig.paths.json -s ./dist -o ./dist",
    "lint": "prettier --write src/ && eslint --ext .ts,.js --fix src/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*.{ts,js,json}": [
      "prettier --write",
      "eslint --ext .ts,.js --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "@nrwl/workspace": "*"
  },
  "dependencies": {
    "@angular-devkit/architect": "^0.1000.3",
    "@angular-devkit/core": "^10.0.3",
    "@angular-devkit/schematics": "~10.0.3",
    "@nrwl/cli": "^10.0.2",
    "@types/eslint": "^7.2.0",
    "@types/prettier": "^2.0.1",
    "deepmerge": "^4.2.2",
    "eslint": "^7.5.0",
    "execa": "^4.0.2",
    "figures": "^3.2.0",
    "listr2": "^2.2.0",
    "nunjucks": "^3.2.1",
    "prettier": "^2.0.5"
  },
  "devDependencies": {
    "@cenk1cenk2/eslint-config": "*",
    "@types/figures": "^3.0.1",
    "@types/nunjucks": "^3.1.3",
    "lint-staged": "^10.2.11",
    "rimraf": "^3.0.2",
    "tsc-watch": "^4.2.8",
    "tscpaths": "^0.0.9",
    "typescript": "^3.9.5"
  }
}