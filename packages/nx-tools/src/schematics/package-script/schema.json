  "$id": "@webundsoehne-private/nx-workspace/package-script",
  "title": "@webundsoehne-private/nx-workspace/package-script",
  "description": "Runs a package.json script.",
  "type": "object",
  "examples": [],
  "properties": {
    "forceRemove": {
      "type": "boolean",
