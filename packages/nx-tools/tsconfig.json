{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@src/*": ["*"],
      "@constants/*": ["constants/*"],
      "@integration/*": ["integration/*"],
      "@interfaces/*": ["interfaces/*"],
      "@rules/*": ["rules/*"],
      "@schematics/*": ["schematics/*"],
      "@templates/*": ["templates/*"],
      "@tasks/*": ["tasks/*"],
      "@utils": ["utils/index"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/files", "**/templates"]
}
