{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@constants/*": ["constants/*"],
      "@integration/*": ["integration/*"],
      "@interfaces/*": ["interfaces/*"],
      "@rules/*": ["rules/*"],
      "@schematics/*": ["schematics/*"],
      "@templates/*": ["templates/*"],
      "@tasks/*": ["tasks/*"],
      "@utils/*": ["utils/*"],
      "@constants": ["constants"],
      "@integration": ["integration"],
      "@interfaces": ["interfaces"],
      "@rules": ["rules"],
      "@schematics": ["schematics"],
      "@templates": ["templates"],
      "@tasks": ["tasks"],
      "@utils": ["utils"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/files", "**/templates"]
}
