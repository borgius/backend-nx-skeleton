{
  "extends": "../../.eslintrc.js",
  "rules": {
    "import/order": [
      "error",
      {
        "pathGroups": [
          {
            "pattern": "@{webundsoehne,webundsoehne-private,src,init,integration,interfaces,rules,schematics,templates,tasks,utils}/**",
            "group": "index"
          },
          {
            "pattern": "@{src,integration,interfaces,rules,schematics,templates,tasks,utils}",
            "group": "index"
          }
        ],
        "pathGroupsExcludedImportTypes": ["builtin"],
        "groups": [
          ["builtin", "external"],
          ["index", "parent", "sibling"]
        ],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  },
  "ignorePatterns": ["!**/*"]
}
