{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "target": "es2017",
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "src",
    "removeComments": false,
    "paths": {
      "@filter": ["filter/index"],
      "@filter/*": ["filter/*"],
      "@decorator": ["decorator/index"],
      "@decorator/*": ["decorator/*"],
      "@interface": ["interface"],
      "@module": ["module/index"],
      "@module/*": ["module/*"],
      "@provider": ["provider/index"],
      "@provider/*": ["provider/*"],
      "@util": ["util/index"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
