{
  "name": "@webundsoehne/brownie",
  "description": "A CLI that automatically merges the desired skeleton and generates the docker-compose to run on development versions.",
  "version": "1.0.0",
  "author": "Backend <backend@webundsoehne.com>",
  "license": "ISC",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "brownie": "bin/run.js"
  },
  "repository": "https://gitlab.tailored-apps.com/ckilic/nx-test",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "rimraf tsconfig*.tsbuildinfo && rimraf dist/",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "tsconfig-replace-paths --project tsconfig.json",
    "dev:build": "yarn prebuild && tsc -p tsconfig.json && yarn postbuild",
    "dev:start": "yarn dev:build && tsc-watch --noClear --onSuccess \"yarn postbuild\"",
    "lint": "prettier --loglevel warn --write src/ && eslint --ext .ts,.js,.tsx,.jsx --fix src/",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx src/",
    "lint:staged": "lint-staged",
    "oclif": "oclif",
    "oclif-dev": "node -r tsconfig-paths/register ../../node_modules/@oclif/dev-cli/bin/run",
    "docs:readme": "yarn oclif-dev readme"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "./**/*.{ts,js,tsx,jsx}": [
      "prettier --loglevel warn --write",
      "eslint --fix"
    ],
    "./**/*.{json,md}": [
      "prettier --loglevel warn --write"
    ]
  },
  "files": [
    "bin/",
    "config/",
    "dist/",
    "templates/"
  ],
  "oclif": {
    "commands": "./dist/commands",
    "bin": "brownie",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "hooks": {
      "init": "./dist/hooks/init.hook",
      "command_not_found": "./dist/hooks/not-found.hook",
      "prerun": "./dist/hooks/prerun.hook"
    }
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "keywords": [
    "oclif",
    "brownie"
  ],
  "dependencies": {
    "@cenk1cenk2/boilerplate-oclif": "^1.10.5",
    "@oclif/command": "^1.8.3",
    "@oclif/config": "^1.17.1",
    "@oclif/errors": "^1.3.5",
    "@oclif/plugin-help": "^5.1.10",
    "@webundsoehne/nx-tools": "*",
    "@webundsoehne/deep-merge": "*",
    "enquirer": "^2.3.6",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "globby": "^11.0.3",
    "got": "^11.8.3",
    "listr2": "^3.13.5",
    "nunjucks": "^3.2.3",
    "through": "^2.3.8",
    "tslib": "^2.2.0",
    "types": "^0.1.1",
    "update-notifier": "^5.1.0",
    "update-notifier2": "^1.0.6",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.26.1",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^16.11.9",
    "@types/through": "^0.0.30",
    "@types/update-notifier": "^5.0.1",
    "source-map-support": "^0.5.21"
  }
}
