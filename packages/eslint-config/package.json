{
  "name": "@webundsoehne/eslint-config",
  "version": "1.0.0",
  "description": "Eslint configuration for my taste.",
  "main": "index.js",
  "repository": "https://gitlab.tailored-apps.com/ckilic/nx-test",
  "author": "Backend <backend@webundsoehne.com>",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "prettier --write ./*.js && eslint --ext .ts,.js,.tsx,.jsx --fix ./",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx ./"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "./*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "./*.{json,md}": [
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "eslint": ">= 7.5.0"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-react-hooks": "^4.1.2"
  },
  "devDependencies": {
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^7.5.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^2.0.5"
  }
}
