{
  "name": "root",
  "private": true,
  "repository": "https://gitlab.tailored-apps.com/ckilic/nx-test",
  "description": "Tailored NestJS NX Based Application Skeleton",
  "author": "Backend <backend@webundsoehne.com>",
  "license": "MIT",
  "scripts": {
    "ls": "lerna la",
    "clean": "lerna clean -y && rimraf node_modules yarn.lock",
    "exec": "lerna exec --stream",
    "command": "lerna run --stream",
    "build": "yarn run command build --concurrency 1 --include-dependencies",
    "link-packages": "lerna link --force-local",
    "lint": "yarn command --concurrency 1 lint",
    "lint:check": "yarn command --parallel lint:check",
    "lint:staged": "yarn command --concurrency 1 lint:staged",
    "scripts:link": "./scripts/link-packages.sh link",
    "scripts:unlink": "./scripts/link-packages.sh unlink",
    "scripts:workspace:link": "./scripts/link-packages-to-workspace.sh link",
    "scripts:workspace:unlink": "./scripts/link-packages-to-workspace.sh unlink",
    "docs:toc": "markdown-toc README.md --bullets='-' -i",
    "docs:jsdoc": "yarn command --no-bail docs:jsdoc"
  },
  "workspaces": {
    "packages": ["packages/*"],
    "nohoist": []
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint:staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "resolutions": {
    "**/rxjs": "7.2.0",
    "**/@angular-devkit/architect": "0.1201.1",
    "**/@angular-devkit/core": "12.1.1",
    "**/@angular-devkit/schematics": "12.1.1"
  },
  "dependencies": {},
  "devDependencies": {
    "@cenk1cenk2/cz-cc": "^1.3.25",
    "@nrwl/workspace": "^12.5.8",
    "commitizen": "^4.2.4",
    "cpy-cli": "^3.1.1",
    "husky-v4": "^4.3.8",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.1",
    "markdown-toc": "^1.2.0",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "tsc-watch": "^4.3.1",
    "tscpaths": "^0.0.9",
    "typedoc": "^0.21.4",
    "typedoc-plugin-markdown": "^3.10.3",
    "typescript": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@cenk1cenk2/cz-cc"
    }
  }
}
