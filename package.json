{
  "name": "root",
  "private": true,
  "repository": "https://gitlab.tailored-apps.com/ckilic/nx-test",
  "description": "Tailored NestJS NX Based Application Skeleton",
  "author": "Backend <backend@webundsoehne.com>",
  "license": "ISC",
  "scripts": {
    "ls": "lerna la",
    "rimraf": "rimraf node_modules && lerna clean --scope -y",
    "release": "lerna publish -y",
    "exec": "lerna exec --stream",
    "command": "lerna run --stream",
    "link-packages": "lerna link --force-local"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "./*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "./*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@nrwl/workspace": "10.0.11"
  },
  "devDependencies": {
    "@cenk1cenk2/cz-cc": "^1.1.2",
    "commitizen": "^4.0.5",
    "eslint": "^7.5.0",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "typescript": "^3.9.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@cenk1cenk2/cz-cc"
    }
  },
  "resolutions": {
    "**/@angular-devkit/architect": "0.1000.5",
    "**/@angular-devkit/core": "10.0.5",
    "**/@angular-devkit/schematics": "10.0.5"
  }
}
