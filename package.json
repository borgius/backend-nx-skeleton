{
  "name": "root",
  "private": true,
  "repository": "https://gitlab.tailored-apps.com/ckilic/nx-test",
  "description": "Tailored NestJS NX Based Application Skeleton",
  "author": "Backend <backend@webundsoehne.com>",
  "license": "ISC",
  "scripts": {
    "ls": "lerna la",
    "rimraf": "rimraf node_modules && lerna clean --scope ${PACKAGE:-''} -y",
    "release": "lerna publish -y",
    "exec": "lerna exec --scope ${PACKAGE:-''} --stream",
    "command": "lerna run --scope ${PACKAGE:-''} --stream",
    "link-packages": "lerna link --force-local"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna exec --scope ${PACKAGE:-''} --stream -- npx --no-install lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "dependencies": {
    "@nrwl/workspace": "10.0.8"
  },
  "devDependencies": {
    "@cenk1cenk2/cz-cc": "^1.0.5",
    "commitizen": "^4.0.5",
    "eslint": "^7.5.0",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "prettier": "^2.0.5",
    "typescript": "^3.9.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@cenk1cenk2/cz-cc"
    }
  },
  "resolutions": {
    "**/@angular-devkit/architect": "0.1000.5",
    "**/@angular-devkit/core": "10.0.5",
    "**/@angular-devkit/schematics": "10.0.5"
  }
}